// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "bindings": {
      "cmd-1": null,
      "cmd-2": null,
      "cmd-3": null,
      "cmd-4": null,
      "cmd-5": null,
      "cmd-6": null,
      "cmd-7": null,
      "cmd-8": null,
      "cmd-9": null,

      "ctrl-shift-s": "workspace::SaveAll",
      "alt-2": "project_panel::ToggleFocus",
      "cmd-2": "project_panel::ToggleFocus",
      "alt-3": "terminal_panel::Toggle",
      "cmd-3": "terminal_panel::Toggle",
      "alt-4": "git_panel::ToggleFocus",
      "cmd-4": "git_panel::ToggleFocus",
      "space e": "project_panel::ToggleFocus",

      "F4": ["task::Spawn", { "task_name": "build", "reveal_target": "dock" }],
      "F5": ["task::Spawn", { "task_name": "run", "reveal_target": "dock" }],
      "F6": ["task::Spawn", { "task_name": "test", "reveal_target": "dock" }],
      "shift-F5": "task::Spawn",
    },
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "a": "project_panel::NewFile",
      "r": "project_panel::Rename",
      "y": "project_panel::Copy",
      "p": "project_panel::Paste",
    },
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "ctrl-v": "editor::Paste",
    },
  },
  {
    "context": "Terminal",
    "bindings": {
      "alt-3": "terminal_panel::Toggle",
      "cmd-3": "terminal_panel::Toggle",
      "ctrl-v": ["terminal::SendKeystroke", "ctrl-shift-v"],
      "ctrl-w": ["workspace::SendKeystrokes", "ctrl-shift-w"],
      "space q": ["workspace::SendKeystrokes", "ctrl-shift-w"],
    },
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "space w": "workspace::Save",
      "space q": "pane::CloseActiveItem",
      "space r r": "editor::Rename",
      "ctrl-v": "vim::Paste",
      "ctrl-shift-v": "vim::Paste",
      "space /": "editor::ToggleComments",
      "space c f": "editor::Format",
      "space g g": "git_panel::ToggleFocus",
    },
  },
]
